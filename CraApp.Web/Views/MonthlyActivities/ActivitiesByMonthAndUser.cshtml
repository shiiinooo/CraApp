@model List<CraApp.Web.Models.Dto.ActivityDTO>

<div class="container">
    <h1 class="text-primary">Activities</h1>
    <hr />

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["error"]
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Day</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Project</th>
                <th></th> <!-- Extra column for action buttons -->
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var activity in Model)
                {
                    <tr>
                        <td>@activity.Day</td>
                        <td>@activity.StartTime</td>
                        <td>@activity.EndTime</td>
                        <td>@activity.Project</td>
                        <td>
                            <!-- Action buttons for each activity (e.g., Edit, Delete) can go here -->
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No activities found for this month.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="IndexMonthlyActivities"  class=" btn btn-primary">Back to List</a>
        <a asp-action="CreateActivities" asp-controller="Activities" class="btn btn-success">Create Activity</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
