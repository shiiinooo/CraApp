@model IEnumerable<CraApp.Web.Models.Dto.ActivityDTO>

<div class="container p-4 border">
    <h1 class="text-primary">Monthly Activities</h1>

    @if (Model == null || !Model.Any())
    {
        <p>No activities found for this user and month.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Project</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in Model)
                {
                    <tr>
                        <td>@activity.Day</td>
                        <td>@activity.StartTime</td>
                        <td>@activity.EndTime</td>
                        <td>@activity.Project</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-controller="User" asp-action="IndexUser" class="btn btn-primary">Back to User List</a>
</div>
